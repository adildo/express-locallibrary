extends layout

block content
    h1 #{title}: #{book.name}

    if book_instances.length
        p #[strong Delete the following instances before attempting to delete this book]

        div(style='margin-left: 20px; margin-top: 20px')
            h3 Book Instances
        dl
        each instance in book_instances
            dt
                a(href=instance.url) status: #{instance.status}, Due #{instance.due_back_formatted}
    else
        p Do you really want to delete this book?
        
        form(method='POST' action="")
            .form-group
                input#bookid.form-control(type='hidden', name=bookid value=book._id required=true)
            button.btn.btn-primary(type='submit') Delete Book
    
